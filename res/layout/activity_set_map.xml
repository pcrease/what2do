<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#000000">
  
<fragment
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setmap"
    android:layout_above="@+id/select_location"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    class="com.google.android.gms.maps.SupportMapFragment" />

<Button
    android:id="@+id/select_location"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    style="@style/smallButtonText"
    android:text="Set Location (Map Center)"
    android:background="@layout/buttons"
    android:visibility="visible" />

<Button
    android:id="@+id/goToNextScreen"
    android:layout_toRightOf="@+id/select_location"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    style="@style/smallButtonText"
    android:background="@layout/buttons"
    android:text="Next >>>"
    android:visibility="visible" />

</RelativeLayout>