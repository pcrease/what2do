<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#969696" />
            <stroke
                android:width="1dp"
                android:color="#3fa2d4" />
            
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <corners
     android:bottomRightRadius="2dp"
     android:bottomLeftRadius="2dp"
  android:topLeftRadius="2dp"
  android:topRightRadius="2dp"/>
        </shape>
    </item>
    
    <item>
        <shape>
            <gradient
                android:startColor="#C7C7C7"
                android:endColor="#C7C7C7"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#2f6699" />
            
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <corners
     			android:bottomRightRadius="2dp"
     			android:bottomLeftRadius="2dp"
  				android:topLeftRadius="2dp"
  				android:topRightRadius="2dp"/>
        </shape>
    </item>
</selector>