<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#2F6699" />
            <stroke
                android:width="1dp"
                android:color="#3fa2d4" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <corners
     android:bottomRightRadius="20dp"
     android:bottomLeftRadius="20dp"
  android:topLeftRadius="20dp"
  android:topRightRadius="20dp"/>
        </shape>
    </item>
    
    <item>
        <shape>
            <gradient
                android:startColor="#53b5e4"
                android:endColor="#3fa2d4"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#2f6699" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <corners
     			android:bottomRightRadius="20dp"
     			android:bottomLeftRadius="20dp"
  				android:topLeftRadius="20dp"
  				android:topRightRadius="20dp"/>
        </shape>
    </item>
</selector>